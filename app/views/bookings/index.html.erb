<h1>Listing bookings</h1>

<table>
  <thead>
    <tr>
      <th>Space</th>
      <th>Checkin</th>
      <th>Checkout</th>
      <th>Confirm date</th>
      <th>Confirm by</th>
      <th>Pay date</th>
      <th>Pay type</th>
      <th>Status</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.space_id %></td>
        <td><%= booking.checkin %></td>
        <td><%= booking.checkout %></td>
        <td><%= booking.confirm_date %></td>
        <td><%= booking.confirm_by %></td>
        <td><%= booking.pay_date %></td>
        <td><%= booking.pay_type %></td>
        <td><%= booking.status %></td>
        <td><%= booking.active %></td>
        <td><%= link_to 'Show', booking %></td>
        <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
        <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Booking', new_booking_path %>
