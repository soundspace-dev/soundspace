<!DOCTYPE html>
<html>
<head>
  <title>Soundspace</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <p><%= link_to 'Home', root_path %>
  <% if user_signed_in? %>
  <p>Welcome back <%= current_user.name %>! <%= link_to 'Log Out', destroy_user_session_path, method: :delete %></p>
  <% else %>
  <p>Welcome! <%= link_to 'Sign in', new_user_session_path %> | <%= link_to 'Create Account', new_user_registration_path %></p>
  <% end %>
  
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  
  <%= yield %>

</body>
</html>